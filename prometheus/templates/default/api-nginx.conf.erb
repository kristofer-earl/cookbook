server {
	listen 80;

	server_tokens   off;
	more_set_headers 'Server: MagicBooBooLand';

	root /srv/http/api/current/public;
	index index.php index.html index.htm;

	access_log /var/log/nginx/api_access.log;
       
	<% if node['spiral']['graylog']['enable'] == true %>
	error_log syslog:server=node['spiral']['graylog']['host']:['spiral']['graylog']['syslog_udp']['port'],facility=daemon;
	<%- else %>
	error_log /var/log/nginx/api_error.log;
	<%- end %>

	server_name <%= node[:prometheus][:api][:fqdn] %>; 

	location / {
		rewrite ^ /index.php;
	}

	location ~ \.php$ {
		include /etc/nginx/cors.conf;
		fastcgi_split_path_info ^(.+\.php)(/.+)$;
		include fastcgi_params;
		fastcgi_param SCRIPT_FILENAME $request_filename;
		fastcgi_intercept_errors on;
		fastcgi_pass unix:/var/run/php5-fpm.sock;
		fastcgi_index index.php;
	}

	location ~ /\.ht {
		deny all;
	}
}
