{
  "run_list": [ "recipe[percona::server]", "recipe[prometheus::web]", "recipe[memcached]" ],
  "prometheus": {
    "cms": {
      "db_host": "localhost",
      "db_name": "cms",
      "db_user": "cms",
      "db_pass": "cms"
    },
    "web": {
      "db_host": "db1.localdomain",
      "db_name": "web",
      "db_user": "web",
      "db_pass": "web"
    },
    "api": {
      "db_host": "db1.localdomain",
      "db_name": "api",
      "db_user": "api",
      "db_pass": "api"
    }
  },
  "percona": {
    "skip_passwords": "true",
    "server": {
      "bind_address": "0.0.0.0"
    }
  },
  "memcached": {
    "memory": "128"
  }
}
