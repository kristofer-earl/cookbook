host.local_ip=<%= node[:opsworks][:instance][:private_ip] %>
host.local_fqdn=<%= node[:opsworks][:instance][:private_dns_name] %>
host.external_ip=<%= node[:opsworks][:instance][:ip] %>

<% if node[:opsworks][:layers]["#{node[:pokermahjong][:my_layer]}"].has_key?('elb-load-balancers').first[:dns_name] -%>
host.external_fqdn=<%= node[:opsworks][:layers]["#{node[:pokermahjong][:my_layer]}"]['elb-load-balancers'].first[:dns_name].downcase %>
<% else -%>
host.external_fqdn=<%= node[:opsworks][:instance][:public_dns_name] %>
<% end -%>
